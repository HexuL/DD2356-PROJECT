{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with OpenMP",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-fopenmp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiled task by user with OpenMP support."
        }
    ]
}
